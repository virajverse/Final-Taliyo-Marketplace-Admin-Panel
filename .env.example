# Taliyo Marketplace Admin Panel - Backend Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# App Configuration
NEXT_PUBLIC_APP_NAME=Taliyo Admin Panel
NEXT_PUBLIC_APP_URL=https://admin.taliyo.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Notifications Module
# Use Supabase Edge Function for sending emails via Resend
NEXT_PUBLIC_USE_SUPABASE_EMAIL=true
# Allowed sender aliases
NEXT_PUBLIC_FROM_EMAIL=noreply@yourdomain.com
NEXT_PUBLIC_RESEND_FROM_SUPPORT=support@yourdomain.com
NEXT_PUBLIC_RESEND_FROM_UPDATES=updates@yourdomain.com
NEXT_PUBLIC_RESEND_FROM_NEWUSER=newuser@yourdomain.com
# Optional Web Push
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Admin Configuration
ADMIN_EMAIL=admin@taliyo.com
ADMIN_PASSWORD=your-secure-password
ADMIN_NAME=Taliyo Admin

# Database Configuration
DATABASE_URL=your_supabase_database_url

# Security
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3001

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMTP (client-visible, only if you build a client-callable API)
NEXT_PUBLIC_SMTP_HOST=
NEXT_PUBLIC_SMTP_PORT=
NEXT_PUBLIC_SMTP_USER=
NEXT_PUBLIC_SMTP_PASS=